@model IdentityLecture2.Models.ViewModel.UserRegisterViewModel
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    <div class="container-fluid">
    <div class="row flex-column">

        <div class="col-md-4 mt-3 form-group">
            @Html.LabelFor(item => item.UserName)
                @Html.TextBoxFor(item => item.UserName, htmlAttributes: new { @class = "form-control" })

        </div>
        <div class="col-md-4 mt-3">
            @Html.LabelFor(item => item.Email)
                @Html.TextBoxFor(item => item.Email, htmlAttributes: new { @class = "form-control" })

        </div>
        <div class="col-md-4 mt-3">
            @Html.LabelFor(item => item.firstName)
                @Html.TextBoxFor(item => item.firstName, htmlAttributes: new { @class = "form-control" })

        </div>
        <div class="col-md-4 mt-3">
            @Html.LabelFor(item => item.lastName)
                @Html.TextBoxFor(item => item.lastName, htmlAttributes: new { @class = "form-control" })

        </div>
                <div class="col-md-4">


            @Html.LabelFor(item => item.Password)
                @Html.TextBoxFor(item => item.Password, new { @type = "password", @class = "form-control" })

        </div>
        <div class="col-md-4">

            
            @Html.LabelFor(item => item.ConfirmPassword)
                @Html.TextBoxFor(item => item.ConfirmPassword, new { @type = "password", @class = "form-control" })

        </div>
        <div class="col-md-4">
        <button type="submit">Register</button>
        </div>
    </div>
    </div>

    
}

