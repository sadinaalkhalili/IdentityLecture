@model IdentityLecture2.Models.ViewModel.UserRegisterViewModel
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{

    <div class="row flex-column">

        <div class="col-md-4 mt-3">
            @Html.LabelFor(item => item.UserName)
            @Html.TextBoxFor(item => item.UserName)

        </div>
        <div class="col-md-4 mt-3">
            @Html.LabelFor(item => item.Email)
            @Html.TextBoxFor(item => item.Email)

        </div>
                <div class="col-md-4">


            @Html.LabelFor(item => item.Password)
            @Html.TextBoxFor(item => item.Password)

        </div>
        <div class="col-md-4">

            
            @Html.LabelFor(item => item.ConfirmPassword)
            @Html.TextBoxFor(item => item.ConfirmPassword,new{@type="password"})

        </div>
        <div class="col-md-4">
        <button type="submit">Register</button>
        </div>
    </div>

    
}

